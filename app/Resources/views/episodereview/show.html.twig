{% extends 'base.html.twig' %}

{% block body %}
    <h1>Episodereview</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episodeReview.id }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ episodeReview.user }}</td>
            </tr>
            <tr>
                <th>Episode</th>
                <td>{{ episodeName }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ episodeReview.value }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if episodeReview.created %}{{ episodeReview.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('episodereview_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('episodereview_edit', { 'id': episodeReview.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
