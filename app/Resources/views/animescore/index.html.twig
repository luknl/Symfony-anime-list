{% extends 'base.html.twig' %}

{% block body %}
    <h1>Animescores list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Anime</th>
                <th>User</th>
                <th>Value</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for animeScore in animeScores %}
            <tr>
                <td><a href="{{ path('animescore_show', { 'id': animeScore.id }) }}">{{ animeScore.id }}</a></td>
                <td>{{ animeName[animeScore.id] }}</td>
                <td>{{ animeScore.user }}</td>
                <td>{{ animeScore.value }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('animescore_show', { 'id': animeScore.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('animescore_edit', { 'id': animeScore.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('animescore_new') }}">Create a new animeScore</a>
        </li>
    </ul>
{% endblock %}
